<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrustProductionViewer_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CrustProductionViewer_MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="The Crust Production Viewer">

    <ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="main" />

    <ShellContent
        Title="Сканирование"
        ContentTemplate="{DataTemplate views:ScanPage}"
        Route="scan" />

    <ShellContent
        Title="Калькулятор"
        ContentTemplate="{DataTemplate views:CalculatorPage}"
        Route="calculator" />

</Shell>

